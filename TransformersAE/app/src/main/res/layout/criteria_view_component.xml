<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/criteria_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/criteria_text_style"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/criteria_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/criteria_name"
                style="@style/criteria_text_style"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/criteria_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:layout_margin="@dimen/criteria_seek_bar_margin"
            android:layout_weight="1" />
    </LinearLayout>
</android.support.v7.widget.CardView>
